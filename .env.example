# Environment Configuration Template
# Copy this file to .env.local for local development
# For production, set these as environment variables in your deployment platform

# Frontend Site URL (Required for Open Graph and social sharing)
# Local: http://localhost:3000
# Production: https://your-domain.com
# This is used for generating absolute URLs for social media previews (og:image, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Backend API URL
# Local: http://localhost:5000/api
# Production: https://ticportal-v2-backend.onrender.com/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api

# WebSocket URL
# Local: http://localhost:5000
# Production: https://ticportal-v2-backend.onrender.com
# Note: For production, you may need to use wss:// (secure WebSocket) if your deployment requires it
NEXT_PUBLIC_WS_URL=http://localhost:5000
